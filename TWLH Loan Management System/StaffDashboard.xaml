<Page x:Class="TWLH_Loan_Management_System.StaffDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TWLH_Loan_Management_System"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StaffDashboard" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" Margin="20,0,0,0">
            <TextBlock TextWrapping="Wrap" Text="Dashboard" FontSize="20" FontWeight="Bold"/>
            <TextBlock TextWrapping="Wrap" Text="Welcome back, staff member" FontSize="8" Foreground="#FF8D8D8D"/>
        </StackPanel>

    </Grid>
</Page>
